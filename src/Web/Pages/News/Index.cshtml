@page
@model Web.Pages.News.IndexModel

<form class="d-flex pb-3">
    <input asp-for="SearchValue" class="form-control me-sm-2" placeholder="Search" />
    <button class="btn btn-success my-2 my-sm-0" asp-page="/News/Index" type="submit">Search</button>
</form>

@if(Model.Articles != null)
{
    <div class="row">
    @foreach(var article in Model.Articles)
    {
        <div class="col-md-6 d-flex align-items-stretch pb-3">
            <div class="card" style="width: 100%">
                <img class="card-img-top" src="@article.ImageUrl"/>
                <div class="card-body d-flex flex-column">
                    <h4 class="card-title text-center">
                        <a href="@article.Url" target="_blank" style="text-decoration: none">@article.Title</a>
                    </h4>
                    <p class="text-center">
                        @article.Summary
                    </p>
                    <div class="mt-auto">
                        <hr/>
                        <div class="d-flex justify-content-between text-muted">
                            <h6>
                                @article.NewsSite
                            </h6>
                            <h6>
                                @article.PublishDate
                            </h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    </div>

    <ul class="pagination pagination-lg d-flex justify-content-center pt-3">
        <li class="page-item @if(Model.PageNumber == 1){<text>disabled</text>}">
            <a class="page-link" asp-route-searchValue="@Model.SearchValue" asp-route-pageNumber="@(Model.PageNumber - 1)">
                <i class="bi bi-chevron-left"></i>
            </a>
        </li>
        @if(Model.PagesCount <= 7)
        {
            for(int i = 1; i <= Model.PagesCount; ++i)
            {
                var pageClassText = "page-item " + (Model.PageNumber == i ? "active" : "");
                <li class="@pageClassText">
                    <a class="page-link" asp-page="/News/Index" asp-route-searchValue="@Model.SearchValue" asp-route-pageNumber="@i">@i</a>
                </li>
            }
        }
        else
        {
            <li class="page-item @if(Model.PageNumber == 1){<text>active</text>}">
                <a class="page-link" asp-page="/News/Index" asp-route-searchValue="@Model.SearchValue" asp-route-pageNumber="1">1</a>
            </li>
            @if(Model.PageNumber > 3 && Model.PageNumber <= Model.PagesCount - 3)
            {
                <li class="page-item disabled">
                    <p class="page-link">...</p>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-page="/News/Index" asp-route-searchValue="@Model.SearchValue" asp-route-pageNumber="@(Model.PageNumber - 1)">@(Model.PageNumber - 1)</a>
                </li>
                <li class="page-item active">
                    <a class="page-link" asp-page="/News/Index" asp-route-searchValue="@Model.SearchValue" asp-route-pageNumber="@(Model.PageNumber)">@(Model.PageNumber)</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-page="/News/Index" asp-route-searchValue="@Model.SearchValue" asp-route-pageNumber="@(Model.PageNumber + 1)">@(Model.PageNumber + 1)</a>
                </li>
                <li class="page-item disabled">
                    <p class="page-link">...</p>
                </li>
            }
            else if(Model.PageNumber <= 3)
            {
                for(int i = 2; i <= 5; ++i)
                {
                    var pageClassText = "page-item " + (Model.PageNumber == i ? "active" : "");
                    <li class="@pageClassText">
                        <a class="page-link" asp-page="/News/Index" asp-route-searchValue="@Model.SearchValue" asp-route-pageNumber="@i">@i</a>
                    </li>
                }
                <li class="page-item disabled">
                    <p class="page-link">...</p>
                </li>
            }
            else if(Model.PageNumber > Model.PagesCount - 3)
            {
                <li class="page-item disabled">
                    <p class="page-link">...</p>
                </li>
                for(int i = Model.PagesCount - 4; i <= Model.PagesCount - 1; ++i)
                {
                    var pageClassText = "page-item " + (Model.PageNumber == i ? "active" : "");
                    <li class="@pageClassText">
                        <a class="page-link" asp-page="/News/Index" asp-route-searchValue="@Model.SearchValue" asp-route-pageNumber="@i">@i</a>
                    </li>
                }
            }
            <li class="page-item @if(Model.PageNumber == Model.PagesCount){<text>active</text>}">
                <a class="page-link" asp-page="/News/Index" asp-route-searchValue="@Model.SearchValue" asp-route-pageNumber="@Model.PagesCount">@Model.PagesCount</a>
            </li>
        }
        <li class="page-item @if(Model.PageNumber == Model.PagesCount){<text>disabled</text>}">
            <a class="page-link" asp-page="/News/Index" asp-route-searchValue="@Model.SearchValue" asp-route-pageNumber="@(Model.PageNumber + 1)">
                <i class="bi bi-chevron-right"></i>
            </a>
        </li>
    </ul>
}


