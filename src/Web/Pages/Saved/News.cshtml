@page
@model Web.Pages.Saved.NewsModel

@{
    ViewData["ActiveSavedTab"] = "News";
}

@if(Model.Articles != null && Model.Articles.Count > 0)
{
    <div class="row">
        @foreach(var article in Model.Articles)
        {
            <partial name="_ArticleCard" model="@ValueTuple.Create(article, "/Saved/News")"/>
        }
    </div>

    <partial name="_Pagination" model="@Model.Pagination" />
}
