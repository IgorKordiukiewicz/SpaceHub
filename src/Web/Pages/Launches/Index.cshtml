@page
@model Web.Pages.Launches.IndexModel

@if(Model.Launches != null)
{
    <div class="row">
    @foreach(var launch in Model.Launches)
    {
        <div class="col-4 d-flex align-items-stretch pb-5">
            <div class="card" style="width: 100%">
                <img class="card-img-top" src="@launch.ImageUrl"/>
                <div class="card-body">
                    <h4 class="card-title text-center">
                        @launch.Name
                    </h4>
                    <h5 class="card-subtitle text-muted text-center">
                        <i class="bi bi-building"></i>&nbsp; @launch.ServiceProviderName
                        <br/>
                        <i class="bi bi-geo-alt"></i>&nbsp; @launch.PadName
                    </h5>
                    <hr/>
                    @if(launch.Date != null)
                    {
                        <h4 class="card-text text-center">
                            @launch.Date
                        </h4>  
                    }
                    <h4 class="card-text text-center @if(launch.Status == "Go")
                        {
                            <text>text-success</text>
                        }
                        else 
                        {
                            <text>text-warning</text>
                        }">
                        (@launch.Status)
                    </h4>
                </div>
            </div>
        </div>
    }
    </div>
}

