@page
@model Web.Pages.Launches.IndexModel

<form class="d-flex pb-3">
    <input asp-for="SearchValue" class="form-control me-sm-2" placeholder="Search" />
    <button class="btn btn-success my-2 my-sm-0" asp-page="/Launches/Index" type="submit">Search</button>
</form>

@if(Model.Launches != null)
{
    <div class="row">
    @foreach(var launch in Model.Launches)
    {
        <div class="col-md-4 d-flex align-items-stretch pb-4">
            <div class="card w-100">
                <img class="card-img-top" src="@launch.ImageUrl"/>
                <div class="card-body d-flex flex-column text-center">
                    <h4 class="card-title">
                        @launch.Name
                    </h4>
                    <h5 class="card-subtitle text-muted">
                        <i class="bi bi-building"></i>&nbsp; @launch.AgencyName
                        <br/>
                        <i class="bi bi-geo-alt"></i>&nbsp; @launch.PadName
                    </h5>
                    <div class="mt-auto">
                        <hr/>
                        @if(launch.Date != null)
                        {
                            <h4>
                                @launch.Date
                            </h4>  
                        }
                        <h4 class="mt-auto @if(launch.Status == "Go for Launch" || launch.Status == "Launch Successful")
                        {
                            <text>text-success</text>
                        }
                        else 
                        {
                            <text>text-warning</text>
                        }">
                        (@launch.Status)
                        </h4>
                        <a asp-page="Details" asp-route-id="@launch.ApiId" class="btn btn-secondary w-100">Details</a>
                    </div>
                    
                </div>
            </div>
        </div>
    }
    </div>

    <partial name="_Pagination" model="@Model.Pagination"/>
}

