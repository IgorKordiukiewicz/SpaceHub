@page
@model Web.Pages.Rockets.IndexModel

<div class="d-flex pb-3 gap-2">
    <form class="d-flex flex-fill gap-1" method="post">
        <input asp-for="SearchValue" class="form-control" placeholder="Search" />
        <button class="btn btn-success" type="submit">Search</button>
    </form>
    <a class="btn btn-success">Rankings</a>
</div>

@if(Model.Rockets != null)
{
    <div class="row">
    @foreach(var rocket in Model.Rockets)
    {
        <div class="col-md-4 d-flex align-items-stretch pb-4">
            <div class="card w-100">
                <img class="card-img-top" src="@rocket.ImageUrl"/>
                <div class="card-body d-flex flex-column text-center">
                    <h3 class="card-title">
                        @rocket.Name
                    </h3>
                    <hr />
                    <div class="row text-center text-muted">
                        <h6 class="col-6">
                            <label asp-for="@rocket.Family"></label>
                        </h6>
                        <h6 class="col-6">
                            <label asp-for="@rocket.Variant"></label>
                        </h6>
                    </div>
                    <div class="row text-center">
                        <h5 class="col-6">
                            @rocket.Family
                        </h5>
                        <h5 class="col-6">
                            @rocket.Variant
                        </h5>
                    </div>
                    <hr />
                    <a asp-page="Details" asp-route-id="@rocket.ApiId" class="btn btn-secondary w-100">Details</a>       
                </div>
            </div>
        </div>
    }
    </div>

    <partial name="_Pagination" model="@Model.Pagination"/>
}

