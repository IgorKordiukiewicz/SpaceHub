@page
@model Web.Pages.Events.IndexModel

<form class="d-flex pb-3 gap-1" method="post">
    <input asp-for="SearchValue" class="form-control" placeholder="Search" />
    <button class="btn btn-success" type="submit">Search</button>
</form>

@if(Model.Events != null)
{
    <div class="row">
        @foreach(var event_ in Model.Events)
        {
        <div class="col-md-4 d-flex align-items-stretch pb-4">
            <div class="card w-100">
                <img class="card-img-top" src="@event_.ImageUrl"/>
                <div class="card-body d-flex flex-column text-center">
                    <h4 class="card-title">
                        @event_.Name
                    </h4>
                    <p class="text-muted">
                        @event_.Description
                    </p>
                    <div class="mt-auto">
                        <hr/>
                        <div class="row text-center text-muted">
                            <h6 class="col-6">
                                <label asp-for="@event_.Location"></label>
                            </h6>
                            <h6 class="col-6">
                                <label asp-for="@event_.Type"></label>
                            </h6>
                        </div>
                        <div class="row text-center">
                            <h5 class="col-6">
                                @event_.Location
                            </h5>
                            <h5 class="col-6">
                                @event_.Type
                            </h5>
                        </div>
                        <hr />
                        @if(event_.Date != null)
                        {
                            <h4>
                                @event_.Date
                            </h4>  
                        }
                        <hr />
                        <a asp-page="/Events/Details" asp-route-id="@event_.ApiId" class="btn btn-secondary w-100">Details</a> 
                    </div>
                </div>
            </div>
        </div>
        }
    </div>

    <partial name="_Pagination" model="@Model.Pagination"/>
}
