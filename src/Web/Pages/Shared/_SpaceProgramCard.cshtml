@model SpaceProgramCardViewModel

<div class="col-12">
    <div class="card mb-4 border-5">
        <div class="row">
            <div class="col-lg-3">
                <img src="@Model.ImageUrl" class="img-fluid rounded-start card-img-left-scale"/>
            </div>
            <div class="col-lg-9">
                <div class="card-body text-center">
                    <h2 class="card-title">
                        @Model.Name
                    </h2>
                    <hr />
                    @if(Model.Description != null)
                    {
                        <h5 class="text-muted">
                            @Model.Description
                        </h5>
                    }
                    @if(Model.StartDate != null)
                    {
                        <hr />
                        <h4>
                            @if(Model.EndDate != null)
                            {
                                <text>@Model.StartDate - @Model.EndDate</text>
                            }
                            else
                            {
                                <text>Since @Model.StartDate</text>
                            }
                        </h4>
                    }
                    <div class="d-flex justify-content-end">
                        @if(Model.InfoUrl != null)
                        {
                            <a class="btn btn-primary" style="margin-right: 4px;" target="_blank" href="@Model.InfoUrl">
                                <i class="fa-solid fa-info"></i>
                                &nbsp; Info
                            </a>
                        }
                        @if(Model.WikiUrl != null)
                        {
                            <a class="btn btn-primary" target="_blank" href="@Model.WikiUrl">
                                <i class="fa-brands fa-wikipedia-w"></i>
                                &nbsp; Wiki
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
