@model EventCardViewModel

<div class="col-md-4 d-flex align-items-stretch pb-4">
    <div class="card" style="width: 100%">
        <img class="card-img-top" src="@Model.ImageUrl"/>
        <div class="card-body d-flex flex-column text-center">
            <h4 class="card-title">
                @Model.Name
            </h4>
            <p class="text-muted">
                @Model.Description
            </p>
            <div class="mt-auto">
                <hr/>
                <div class="row text-center text-muted">
                    <h6 class="col-6">
                        <label asp-for="Location"></label>
                    </h6>
                    <h6 class="col-6">
                        <label asp-for="Type"></label>
                    </h6>
                </div>
                <div class="row text-center">
                    <h5 class="col-6">
                        @Model.Location
                    </h5>
                    <h5 class="col-6">
                        @Model.Type
                    </h5>
                </div>
                <hr />
                @if(Model.Date != null)
                {
                    <h4>
                        @Model.Date
                    </h4>  
                }
                <hr />
                <a asp-page="/Events/Details" asp-route-id="@Model.ApiId" class="btn btn-secondary" style="width:100%">Details</a> 
            </div>
        </div>
    </div>
</div>
