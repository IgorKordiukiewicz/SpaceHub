@model RocketIndexCardViewModel

<div class="col-md-4 d-flex align-items-stretch pb-4">
    <div class="card" style="width: 100%">
        <img class="card-img-top" src="@Model.ImageUrl"/>
        <div class="card-body d-flex flex-column text-center">
            <h3 class="card-title">
                @Model.Name
            </h3>
            <hr />
            <div class="row text-center text-muted">
                <h6 class="col-6">
                    Family
                </h6>
                <h6 class="col-6">
                    Variant
                </h6>
            </div>
            <div class="row text-center">
                <h5 class="col-6">
                    @Model.Family
                </h5>
                <h5 class="col-6">
                    @Model.Variant
                </h5>
            </div>
            <hr />
            <a asp-page="Details" asp-route-id="@Model.ApiId" class="btn btn-secondary" style="width:100%">Details</a>       
        </div>
    </div>
</div>
