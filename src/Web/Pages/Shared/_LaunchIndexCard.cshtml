@model LaunchIndexCardViewModel

<div class="col-md-4 d-flex align-items-stretch pb-4">
    <div class="card w-100">
        <img class="card-img-top" src="@Model.ImageUrl"/>
        <div class="card-body d-flex flex-column text-center">
            <h4 class="card-title">
                @Model.Name
            </h4>
            <h5 class="card-subtitle text-muted">
                <i class="bi bi-building"></i>&nbsp; @Model.AgencyName
                <br/>
                <i class="bi bi-geo-alt"></i>&nbsp; @Model.PadName
            </h5>
            <div class="mt-auto">
                <hr/>
                @if(Model.Date is not null)
                {
                    <h4>
                        @Model.Date
                    </h4>  
                }
                <h4 class="mt-auto @if(Model.Status == "Go for Launch" || Model.Status == "Launch Successful")
                {
                    <text>text-success</text>
                }
                else 
                {
                    <text>text-warning</text>
                }">
                (@Model.Status)
                </h4>
                <a asp-page="/Launches/Details" asp-route-id="@Model.ApiId" class="btn btn-secondary w-100">Details</a>
            </div>
            
        </div>
    </div>
</div>